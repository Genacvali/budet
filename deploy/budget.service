[Unit]
Description=Budget Flask App (Gunicorn)
After=network.target
Wants=network-online.target

[Service]
User=root
Group=root
WorkingDirectory=/root/budget-app
Environment="PATH=/root/budget-app/.venv/bin"
ExecStart=/root/budget-app/.venv/bin/gunicorn -w 1 -b 127.0.0.1:8000 app:app
Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target