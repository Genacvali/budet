[Unit]
Description=Budget Flask App (Gunicorn)
After=network.target
Wants=network-online.target

[Service]
User=ubuntu
Group=ubuntu
WorkingDirectory=/home/ubuntu/budget-app
Environment="PATH=/home/ubuntu/budget-app/.venv/bin"
ExecStart=/home/ubuntu/budget-app/.venv/bin/gunicorn -w 1 -b 127.0.0.1:8000 app:app
Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target